<Window x:Class="Canvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Canvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Grid Width="300"> <!--tu mam miejsce obcięcie butona celem pokazania rodzica z potomkiem-->
        <Canvas>
            <Button Content="Button" Canvas.Left="253" Canvas.Top="100" Width="75"/>
            <Button Content="Button" Canvas.Left="253" Canvas.Top="120" Width="75"/>

    <!-- Z canvasa korzystamy dla statyczny miejsc położenie dla danego elementu atrybutu
            pozycionowanie jest relatywene w stosunku do rodzica
            co by się nie działo dana rzecz będzie miała przypisaną pozycję bazując na rodzicu-->
        </Canvas>
    </Grid>
</Window>
